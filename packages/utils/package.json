{
  "name": "@voerkai18n/utils",
  "version": "3.0.17",
  "description": "utils for voerkai18n",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./extract": {
      "types": "./dist/extract/index.d.ts",
      "import": "./dist/extract/index.mjs",
      "require": "./dist/extract/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "extract:vue": "tsx src/extract/tests/vue",
    "extract:tsx": "tsx src/extract/tests/tsx",
    "extract:astro": "tsx src/extract/tests/astro",
    "extract:svelte": "tsx src/extract/tests/svelte",
    "extract:regex": "tsx src/extract/tests/regex"
  },
  "author": "wxzhang",
  "license": "MIT",
  "keywords": [
    "voerkai18n",
    "i18n",
    "language",
    "translation",
    "internationalize"
  ],
  "dependencies": {
    "axios": "^1.8.3",
    "bcp47-language-tags": "^1.0.8",
    "flex-tools": "^1.4.41",
    "fs-extra": "^10.0.1",
    "glob": "^11.0.1",
    "js-yaml": "^4.1.0",
    "semver": "^7.3.7",
    "shelljs": "^0.8.5",
    "string.prototype.replaceall": "^1.0.7",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.8",
    "@voerkai18n/runtime": "workspace:*",
    "esbuild-plugin-copy": "^2.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@voerkai18n/runtime": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhangfisher/voerka-i18n.git"
  },
  "homepage": "https://github.com/zhangfisher/voerka-i18n/tree/master/packages/utils#readme",
  "bugs": {
    "url": "https://github.com/zhangfisher/voerka-i18n/issues"
  }
}
